{
	"compilerOptions": {
		"strict": true,
		"lib": [
			"es5",
			"es6",
			"dom",
			"es2015.core",
			"es2015.collection",
			"es2015.generator",
			"es2015.iterable",
			"es2015.promise",
			"es2015.proxy",
			"es2015.reflect",
			"es2015.symbol",
			"es2015.symbol.wellknown",
			"esnext.asynciterable"
		],
		"outDir": "./build/",
		"allowSyntheticDefaultImports": true,
		"target": "es5",
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"incremental": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"src/db/**/*.ts"
	]
}
